{
  "name": "promptpasta",
  "displayName": "PromptPasta",
  "description": "PromptPasta is a Visual Studio Code extension that makes building and managing AI prompts a breeze",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.94.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/radleta/PromptPasta"
  },
  "publisher": "RichardAdleta",
  "author": {
    "name": "Richard C. Adleta",
    "email": "radleta@gmail.com",
    "url": "https://www.richardadleta.com/"
  },
  "categories": [
    "Machine Learning",
    "Productivity"
  ],
  "activationEvents": [
    "onCommand:promptpasta.helloWorld"
  ],
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "keywords": [
    "VS Code",
    "extension",
    "copy-paste",
    "prompt",
    "AI tools",
    "productivity",
    "configuration",
    "binary files",
    "ignore patterns",
    "summary",
    "prompt building",
    "context awareness",
    "collaboration",
    "performance"
  ],
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier --write src/**/*.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.11.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "typescript": "^5.6.2"
  },
  "files": [
    "dist",
    "out",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "contributes": {
    "commands": [
      {
        "command": "promptpasta.copyForPrompt",
        "title": "Copy for Prompt"
      },
      {
        "command": "promptpasta.copyTabForPrompt",
        "title": "Copy Tab for Prompt"
      },
      {
        "command": "promptpasta.copyTabGroupForPrompt",
        "title": "Copy Tab Group for Prompt"
      },
      {
        "command": "promptpasta.copyAllTabsForPrompt",
        "title": "Copy All Tabs for Prompt"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "promptpasta.copyForPrompt",
          "when": "resource"
        }
      ],
      "editor/title": [
        {
          "command": "promptpasta.copyTabForPrompt",
          "when": "resource"
        }
      ],
      "editor/title/context": [
        {
          "command": "promptpasta.copyTabForPrompt",
          "when": "resource"
        },
        {
          "command": "promptpasta.copyTabGroupForPrompt",
          "when": "resource"
        },
        {
          "command": "promptpasta.copyAllTabsForPrompt",
          "when": "resource"
        }
      ],
      "editor/context": [
        {
          "command": "promptpasta.copyForPrompt",
          "when": "resource"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "PromptPasta Configuration",
      "properties": {
        "promptpasta.binaryFileHandling": {
          "type": "string",
          "enum": [
            "summarize",
            "ignore"
          ],
          "default": "summarize",
          "description": "Choose whether to summarize or ignore binary files during copy operations."
        },
        "promptpasta.ignore": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/node_modules/**",
            "**/*.bin"
          ],
          "description": "Glob patterns for files or folders to ignore when copying."
        },
        "promptpasta.summaryOnly": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "**/*.jpg",
            "**/*.png",
            "**/*.zip"
          ],
          "description": "Glob patterns for files to include only a summary (name, path, size) instead of content when copying."
        }
      }
    }
  },
  "dependencies": {
    "@types/micromatch": "^4.0.9",
    "chardet": "^2.0.0",
    "iconv-lite": "^0.6.3",
    "isbinaryfile": "^5.0.2",
    "micromatch": "^4.0.8"
  }
}
